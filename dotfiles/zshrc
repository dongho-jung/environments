export PATH=$PATH:$HOME/.local/bin:$HOME/go/bin
export EDITOR=vim
export LESSHISTFILE=/dev/null
export HISTFILE="$HOME/.zsh_history"

alias ga='git add' gc='git commit -v' gl='git pulk' gp='git push' gg='git gui'
alias y='xclip -selection clipboard' p='xclip -selection clipboard -o' yi='y -t image/png -i'
alias ls='exa' l='exa -lbF --git' ll='exa -la --git' tree='exa --tree --git' ltree='tree -l'    
alias open='xdg-open' cat='bat' k='kubectl'

ZP=$HOME/.config/zsh/plugins
. /usr/share/doc/pkgfile/command-not-found.zsh
. /usr/share/autojump/autojump.zsh
. $ZP/omz/lib/history.zsh
. $ZP/alias-tips/alias-tips.plugin.zsh
. $ZP/fzf/shell/key-bindings.zsh
. $ZP/omz/lib/key-bindings.zsh
bindkey '^H' vi-backward-kill-word

setopt share_history

autoload -Uz compinit; compinit -C
zstyle ':completion:*:*:docker:*' option-stacking yes
zstyle ':completion:*:*:docker-*:*' option-stacking yes

fpath+=($HOME/.config/zsh/plugins/pure)
autoload -U promptinit; promptinit
prompt pure
