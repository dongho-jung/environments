zz() {
    local ZZ_FILE="$HOME/.zz"

    # ê²½ë¡œ ì¶”ê°€ ê¸°ëŠ¥
    if [[ "$1" == "--add" ]]; then
        local path_to_add="${2:-$PWD}"
        grep -qxF "$path_to_add" "$ZZ_FILE" 2>/dev/null || echo "$path_to_add" >> "$ZZ_FILE"
        echo "ğŸ“Œ ê²½ë¡œ ì¶”ê°€ë¨: $path_to_add"
        return
    fi

    # ê²½ë¡œ ëª©ë¡ì´ ì—†ìœ¼ë©´ ì•ˆë‚´
    if [[ ! -s "$ZZ_FILE" ]]; then
        echo "âŒ ì €ì¥ëœ ê²½ë¡œê°€ ì—†ìŠµë‹ˆë‹¤. 'zz --add <path>'ë¡œ ì¶”ê°€í•˜ì„¸ìš”!"
        return
    fi

    # fzf ì‚¬ìš© ê°€ëŠ¥ ì—¬ë¶€ í™•ì¸
    if command -v fzf &> /dev/null; then
        local selected_dir=$(cat "$ZZ_FILE" | fzf --prompt="ğŸ“‚ ì„ íƒí•  ê²½ë¡œ: " --height=15 --border --reverse)
    else
        # fzfê°€ ì—†ì„ ê²½ìš° ê¸°ë³¸ select ì‚¬ìš©
        echo "ğŸ”½ ì´ë™í•  ê²½ë¡œë¥¼ ì„ íƒí•˜ì„¸ìš”:"
        select selected_dir in $(cat "$ZZ_FILE"); do
            break
        done
    fi

    # ì„ íƒëœ ê²½ë¡œë¡œ ì´ë™
    if [[ -n "$selected_dir" ]]; then
        cd "$selected_dir" || echo "âŒ í•´ë‹¹ ê²½ë¡œë¡œ ì´ë™í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤."
    fi
}

