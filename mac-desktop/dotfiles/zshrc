yy() {
    p | yt-dlp -o "~/archive/%(uploader)s/%(title)s.mp4" -a - --embed-thumbnail -f "bv*[vcodec^=avc1]+ba" --merge-output-format mp4 -4 "$@"
}
tmp() { 
    TMP=~/tmp/$(date +%F)
    if [ "$#" -gt 0 ]; then
        TMP="${TMP}-$(echo "$@" | tr ' ' '-')"
    fi
    mkdir -p "$TMP"
    cd "$TMP"
}
video_to_gif() { ffmpeg -i $1 -vf "fps=$2" output.gif && gifsicle -O3 output.gif -o output.gif }
