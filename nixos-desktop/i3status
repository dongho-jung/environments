general {
        output_format = "i3bar"
        colors = true
        interval = 1
}

order += "ethernet eno1"
order += "read_file public_ip"
order += "disk /"
order += "cpu_usage"
# order += "cpu_temperature 0"
order += "load"
order += "memory"
order += "volume master"
order += "time"

disk "/" {
	format = "disk %percentage_used used"
}

read_file public_ip {
    format = %content
    format_bad = "%title(%error)"
    path = /tmp/public_ip
}

ethernet eno1 {
	format_up = "eth %speed"
	format_down = "down"
}

cpu_usage {
	format = "cpu: %usage"
}

cpu_temperature 0 {
	format = "%degrees°C"
    path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
}

memory {
	format = "mem: %percentage_used used"
	threshold_degraded = "10%"
	format_degraded = "MEMORY: %free"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse"
}

time {
    format = "%Y/%m/%d %a %H:%M:%S"
}
